# ============================================================================
# Email Management System - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your values
# NEVER commit your .env file to version control!

# ============================================================================
# Security Settings (REQUIRED)
# ============================================================================
# Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secure-secret-key-at-least-32-characters-long

# ============================================================================
# Database Configuration (Optional)
# ============================================================================
DATABASE_PATH=./data/emails.db

# ============================================================================
# ML Model Configuration (Optional)
# ============================================================================
MODEL_PATH=./models/classifier.pkl

# ============================================================================
# IMAP Configuration (Optional - defaults to Gmail)
# ============================================================================
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_TIMEOUT=30

# ============================================================================
# SMTP Configuration (Optional - defaults to Gmail)
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_TIMEOUT=30

# ============================================================================
# Sync Settings (Optional)
# ============================================================================
THREAD_POOL_SIZE=5
SYNC_TIMEOUT_MINUTES=5
DEFAULT_FETCH_COUNT=50

# ============================================================================
# Server Configuration (Optional)
# ============================================================================
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# ============================================================================
# CORS Configuration (Optional)
# ============================================================================
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
