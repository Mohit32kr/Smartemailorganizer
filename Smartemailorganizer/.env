SMTP_TIMEOUT=30

# ============================================================================
# Sync Settings (Optional)
# ============================================================================
THREAD_POOL_SIZE=5
SYNC_TIMEOUT_MINUTES=5
DEFAULT_FETCH_COUNT=50

# ============================================================================
# Server Configuration (Optional)
# ============================================================================
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# ============================================================================
# CORS Configuration (Optional)
# ============================================================================
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
